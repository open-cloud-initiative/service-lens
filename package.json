{
  "name": "service-lens",
  "version": "1.0.0-alpha.0",
  "private": true,
  "scripts": {
    "dev": "nodemon",
    "build": "next build && tsc --project tsconfig.server.json",
    "start": "cross-env NODE_ENV=production node dist/server.js",
    "lint": "eslint .",
    "format": "eslint . --fix",
    "check": "biome check",
    "check:fix": "biome check --write",
    "generate": "npm run generate:graphql",
    "generate:presets": "ts-node --compiler-options '{\"module\":\"CommonJS\"}' src/scripts/generate-theme-presets.ts",
    "generate:graphql": "graphql-codegen --config ./codegen.ts",
    "generate:migration": "npm run sequelize -- migration:generate --name",
    "postinstall": "dotenv npm run db:migrate",
    "db:migrate": "dotenv drizzle-kit push"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx}": [
      "biome check --write --no-errors-on-unmatched"
    ]
  },
  "dependencies": {
    "@auth/pg-adapter": "^1.11.1",
